<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background"
    android:orientation="vertical"
    tools:context=".TicketsActivity">
<Space
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
/>

    <Button
        android:id="@+id/ExistingTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Existing Tickets"
        android:minWidth="180dp"
        android:textColor="@color/black"
        android:onClick="onExistingTicketButtonClick"
        android:layout_gravity="center"
         />
    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/NewTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="New Ticket"
        android:minWidth="180dp"
        android:textColor="@color/black"
        android:onClick="onNewTicketButtonClick"
        android:layout_gravity="center"
        />
<Space
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    />
</androidx.appcompat.widget.LinearLayoutCompat>